---
import { PRODUCTS } from '@components/products/data/products-data';
import CartSingleProduct from './CartSingleProduct.astro';
---

<section
  class='flex flex-col font-primary h-full w-[70%] border-2 border-stone-800 bg-gradient-to-b from-zinc-50 via-zinc-50/80 to-zinc-50/40'
>
  <h2 class='px-4 py-2 border-b-2 border-stone-800 uppercase font-bold'>
    your products
  </h2>

  <div class='flex flex-col gap-4 overflow-auto p-4'>
    {PRODUCTS.map((product) => <CartSingleProduct {...product} />)}
  </div>
</section>

