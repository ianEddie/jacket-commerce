---
import AddToCart from '@components/cart/components/AddToCart';

const { product } = Astro.props;
const { price } = product;
---

<footer
  class='py-2 px-4 flex items-center justify-between border-t border-stone-800'
>
  <AddToCart
    client:load
    product={product}
  />
  <span class='flex items-center gap-1'>
    <strong class='text-green-600'>$</strong>
    <strong class='text-[18px] tracking-wide'>{price}</strong>
  </span>
</footer>
