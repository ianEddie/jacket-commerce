---
const { name, origin, colors, size } = Astro.props;

---

<header class='w-full flex flex-col flex-grow'>
  <article class='w-full flex flex-grow'>
    <span
      class='w-[20%] border-b border-stone-800 flex justify-center items-center font-title font-semibold lg:text-base text-sm'
      >MDJ</span
    >
    <table class='flex-grow grid grid-cols-2 border-b border-stone-800'>
      <tbody class='border-x border-stone-800'>
        <tr class='border-b border-stone-800'>
          <th>Name</th>
          <td>{name}</td>
        </tr>
        <tr>
          <th>Origin</th>
          <td>
            {origin}
          </td>
        </tr>
      </tbody>
      <tbody>
        <tr class='border-b border-stone-800'>
          <th>Colors</th>
          <td class='flex gap-2'>
            {
              colors.map((color: { hex: string }) => (
                <span
                  style={{ backgroundColor: color.hex }}
                  class='lg:size-4 size-3 rounded-full'
                />
              ))
            }
          </td>
        </tr>
        <tr>
          <th>Size</th>
          <td>{size}</td>
        </tr>
      </tbody>
    </table>
  </article>
  <footer
    class='flex justify-center items-center py-[5px] text-sm border-b border-stone-800 font-medium'
  >
    Front & Back
  </footer>
</header>
<style>
  tbody {
    @apply w-full flex flex-col;
    tr {
      @apply flex justify-between items-center lg:px-4 px-[6px] py-1 lg:text-base text-sm h-full;
    }
    td {
      @apply lg:text-sm text-[12px] font-medium text-pretty text-end;
    }
  }
</style>
